<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 탭 레이아웃 속성 변경을 위한 스타일 -->
    <style name="tabTextSizeBold" parent="TextAppearance.Design.Tab">
        <item name ="android:textSize">14sp</item>
        <item name ="android:textStyle">bold</item>
    </style>

    <!-- 메인 진입시 나오는 광고 다이얼로그 애니메이션 스타일-->
    <style name="AdAnimationPopupStyle">
        <item name="android:windowEnterAnimation">@anim/main_dialog_open</item>
        <item name="android:windowExitAnimation">@anim/main_dialog_close</item>
    </style>

    <!-- 바텀바 플로팅 버튼 클릭시 나오는 다이얼로그 애니메이션 -->
    <style name="FloatAnimationPopupStyle">
        <item name="android:windowEnterAnimation">@anim/float_dialog_open</item>
        <item name="android:windowExitAnimation">@anim/float_dialog_close</item>
    </style>

    <!-- 구매 액티비티 - 가로형 리사이클러뷰 스크롤바 커스텀 -->
    <style name="BuyCustomScrollStyle">
        <item name="android:scrollbarAlwaysDrawHorizontalTrack">true</item>
        <item name="android:scrollbarTrackHorizontal">@drawable/buy_scroll_custom_track</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/buy_scroll_custom_thumb</item>
    </style>


    <!-- 구매 액티비티 - 바텀 시트 다이얼로그 커스텀 -->
    <style name="RoundCornerBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetCustomStyle</item>
    </style>

    <style name="bottomSheetCustomStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_custom</item>
    </style>


</resources>