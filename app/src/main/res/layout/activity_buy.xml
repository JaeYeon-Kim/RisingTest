<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.store.buy.BuyActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toTopOf="@id/buy_layout_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/buy_toolbar_main"
                app:layout_scrollFlags="scroll|enterAlways"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/buy_btn_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/buy_toolbar_back" />

                <ImageView
                    android:id="@+id/buy_btn_home"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/buy_toolbar_home" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/buy_main_toolbar_titleText"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/buy_btn_search"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/buy_toolbar_search" />

                <ImageView
                    android:id="@+id/store_btn_cart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/buy_toolbar_cart" />
            </LinearLayout>


            <com.google.android.material.appbar.CollapsingToolbarLayout
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/store_viewpager_image_1"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"/>

                <LinearLayout
                    android:id="@+id/buy_toolbar_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/buy_btn_category_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent_backgroundColor"
                        android:text="@string/buy_sub_toolbar_large_categoryText"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/buy_category_arrow" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/buy_btn_category_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent_backgroundColor"
                        android:text="@string/buy_sub_toolbar_medium_categoryText"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/buy_category_arrow" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/buy_btn_category_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent_backgroundColor"
                        android:text="@string/buy_sub_toolbar_small_categoryText"
                        android:textSize="14sp" />


                </LinearLayout>


            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="테스트 버튼입니당"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
                <Button
                    android:text="테스트 버튼입니당"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
                <Button
                    android:text="테스트 버튼입니당"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
                <Button
                    android:text="테스트 버튼입니당"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
                <Button
                    android:text="테스트 버튼입니당"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
                <Button
                    android:text="테스트 버튼입니당"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
                <Button
                    android:text="테스트 버튼입니당"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
                <Button
                    android:text="테스트 버튼입니당"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buy_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/buy_btn_scrap"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/store_btn_scrap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/buy_tv_scrapCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buy_bottom_scrapText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/buy_btn_scrap"
            app:layout_constraintStart_toStartOf="@id/buy_btn_scrap"
            app:layout_constraintTop_toBottomOf="@id/buy_btn_scrap" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buy_btn_buy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/buy_btn_custom"
            android:text="@string/buy_bottom_btnText"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/buy_btn_scrap"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>